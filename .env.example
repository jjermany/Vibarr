# Vibarr Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Spotify API
# Get credentials at: https://developer.spotify.com/dashboard
# ===========================================
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# ===========================================
# Last.fm API
# Get credentials at: https://www.last.fm/api/account/create
# ===========================================
LASTFM_API_KEY=
LASTFM_SHARED_SECRET=

# ===========================================
# Plex Media Server
# Find your token: https://support.plex.tv/articles/204059436-finding-an-authentication-token-x-plex-token/
# ===========================================
PLEX_URL=http://localhost:32400
PLEX_TOKEN=

# ===========================================
# Prowlarr
# Get API key from Prowlarr Settings > General > Security
# ===========================================
PROWLARR_URL=http://localhost:9696
PROWLARR_API_KEY=

# ===========================================
# MusicBrainz (Optional)
# User agent for API requests
# ===========================================
MUSICBRAINZ_USER_AGENT=Vibarr/1.0 (your@email.com)

# ===========================================
# Application Settings
# ===========================================
# Enable debug mode (set to true for development)
DEBUG=false

# Secret key for session encryption (generate a random string for production)
SECRET_KEY=change-me-in-production

# ===========================================
# Auto-Download Settings
# ===========================================
# Enable automatic downloads for high-confidence matches
AUTO_DOWNLOAD_ENABLED=false

# Minimum confidence score (0.0-1.0) for auto-downloads
AUTO_DOWNLOAD_CONFIDENCE_THRESHOLD=0.8

# Preferred audio quality: flac, 320, v0
PREFERRED_QUALITY=flac
